<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <definition name="default" template="/skins/selector.jsp">
        <put-attribute name="content" value="/skins/content.jsp"/>
    </definition>
    <definition name="error-404" extends="default">
        <put-attribute name="content" value="/404.jsp"/>
    </definition>
    <definition name="error-403" extends="default">
        <put-attribute name="content" value="/403.jsp"/>
    </definition>        
    <definition name="error-401" extends="default">
        <put-attribute name="content" value="/401.jsp"/>
    </definition>
    <definition name="manager-layout" template="/manager/layout.jsp">
        <put-attribute name="title" value="Administrativo do site Tatame"/>
        <put-attribute name="head" value="/manager/head.jsp"/>
        <put-attribute name="header" value="/manager/header.jsp"/>
        <put-attribute name="menu" value="/manager/menu.jsp"/>
        <put-attribute name="content" value="/manager/home.jsp"/>
        <put-attribute name="footer" value="/manager/footer.jsp"/>
    </definition>
    <definition name="manager-login" template="/manager/loginform.jsp"/>
    <definition name="index" extends="manager-layout">
        <put-attribute name="content" value="/manager/index.jsp"/>
    </definition>
    <definition name="account-list" extends="manager-login">
        <put-attribute name="content" value="/manager/account/list.jsp"/>
    </definition>    
    <definition name="account-input" extends="manager-login">
        <put-attribute name="content" value="/manager/account/input.jsp"/>
    </definition>    
</tiles-definitions>