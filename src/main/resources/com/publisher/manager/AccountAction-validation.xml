<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message>Você deve entrar um nome.</message>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <message>Você deve entrar um e-mail.</message>
        </field-validator>
        <field-validator type="email">
            <message>Você deve entrar um e-mail válido</message>
        </field-validator>
    </field>
    <field name="timezone">
        <field-validator type="requiredstring">
            <message>Você deve definir um fuso horário</message>
        </field-validator>
    </field>
</validators>