<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message>Você deve entrar um nome.</message>
        </field-validator>
    </field>
    <field name="path">
        <field-validator type="requiredstring">
            <message>Você deve definir o caminho do arquivo.</message>
        </field-validator>
    </field>
</validators>