<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="eventName">
        <field-validator type="requiredstring">
            <message>O campo 'Nome do Evento' é obrigatório.</message>
        </field-validator>
    </field>
    <field name="tags">
        <field-validator type="required">
            <message>O campo 'Palavras chaves' é obrigatório.</message>
        </field-validator>
    </field>
    <field name="code">
        <field-validator type="required">
            <message>O campo 'Código' é obrigatório.</message>
        </field-validator>
    </field>
</validators>