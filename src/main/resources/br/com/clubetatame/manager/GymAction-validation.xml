<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message>O campo 'Nome' é obrigatório.</message>
        </field-validator>
    </field>
    <field name="contact">
        <field-validator type="requiredstring">
            <message>O campo 'Contato' é obrigatório.</message>
        </field-validator>
    </field>
    <field name="document">
        <field-validator type="requiredstring">
            <message>O campo 'CNPJ' é obrigatório.</message>
        </field-validator>
        <field-validator type="regex">
        	<param name="expression">([0-9]{2}[\.]?[0-9]{3}[\.]?[0-9]{3}[\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\.]?[0-9]{3}[\.]?[0-9]{3}[-]?[0-9]{2})</param>
            <message>CNPJ inválido.</message>
        </field-validator>        
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <message>O campo 'E-mail' é obrigatório.</message>
        </field-validator>
        <field-validator type="email">
            <message>Você deve entrar um e-mail válido</message>
        </field-validator>
    </field>       
    <field name="phone">
        <field-validator type="requiredstring">
            <message>O campo 'Telefone' é obrigatório.</message>
        </field-validator>
    </field>
    <field name="address">
        <field-validator type="requiredstring">
            <message>O campo 'Endereço' é obrigatório.</message>
        </field-validator>
    </field>
    <field name="cep">
        <field-validator type="requiredstring">
            <message>O campo 'CEP' é obrigatório.</message>
        </field-validator>
        <field-validator type="regex">
        	<param name="expression">\d{5}[-]\d{3}</param>
            <message>CEP inválido.</message>
        </field-validator>        
    </field>
    <field name="lat">
        <field-validator type="requiredstring">
            <message>O campo 'Latitude' é obrigatório.</message>
        </field-validator>
        <field-validator type="double">
			<param name="min">-90</param>
			<param name="max">90</param>
			<message>A Latitude deve ser entre ${min} a ${max}.</message>        
        </field-validator>
    </field>
    <field name="lon">
        <field-validator type="requiredstring">
            <message>O campo 'Longitude' é obrigatório.</message>
        </field-validator>
        <field-validator type="double">
			<param name="min">-180</param>
			<param name="max">180</param>
			<message>A Longitude deve ser entre ${min} a ${max}.</message>        
        </field-validator>
    </field>             
</validators>